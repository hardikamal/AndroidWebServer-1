<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android">


    <CheckBoxPreference
        android:key="@string/pk_allow_cors"
        android:singleLine="true"
        android:title="Allow CORS"
        android:defaultValue="false"
        android:summary="in HTTP header"/>
    <CheckBoxPreference
        android:key="@string/pk_config_loopback_ip"
        android:singleLine="true"
        android:title="Configure Loopback IP"
        android:defaultValue="false"
        android:summary="Connect to loopback IP 127.0.0.1 "/>
    <EditTextPreference
        android:key="@string/pk_document_root"
        android:singleLine="true"
        android:title="Document root" />
    <EditTextPreference
        android:key="@string/pk_port"
        android:numeric="integer"
        android:defaultValue="8080"
        android:title="Port" />

</PreferenceScreen>
